{  
   "apiVersion":"v1",
   "kind":"List",
   "items":[  
      {  
         "kind":"DeploymentConfig",
         "apiVersion":"v1",
         "metadata":{  
            "name":"wildfly"
         },
         "spec":{  
            "strategy":{  
               "type":"Recreate",
               "resources":{  

               }
            },
            "triggers":[  
               {  
                  "type":"ConfigChange"
               }
            ],
            "replicas":1,
            "selector":{  
               "name":"wildfly"
            },
            "template":{ 
               "metadata":{  
                  "labels":{  
                     "name":"wildfly"
                  }
               },
               "spec":{  
                  "containers":[  
                     {  
                        "name":"wildfly",
                        "image":"arquillian:./src/test/resources/wildfly",
                        "ports":[  
                           {
                              "hostPort":9090,  
                              "containerPort":8080,
                              "protocol":"TCP"
                           }
                        ],
                        "livenessProbe":{  
                           "tcpSocket":{  
                              "port":8080
                           },
                           "timeoutSeconds":1,
                           "initialDelaySeconds":10
                        }
                     }
                  ],
                  "restartPolicy":"Always",
                  "dnsPolicy":"ClusterFirst"
               }
            }
         }
      },
      {  
         "kind":"Service",
         "apiVersion":"v1",
         "metadata":{  
            "name":"wildfly-service"
         },
         "spec":{  
            "selector":{  
               "name":"wildfly"
            },
            "ports":[  
               {  
                  "protocol":"TCP",
                  "port":9090,
                  "targetPort":8080
               }
            ]
         }
      }
   ]
}