{  
   "apiVersion":"v1",
   "kind":"List",
   "items":[  
      {  
         "apiVersion":"v1",
         "kind":"Pod",
         "metadata":{  
            "name":"wildfly",
            "labels":{  
               "name":"wildfly"
            }
         },
         "spec":{  
            "containers":[  
               {  
                  "name":"wildfly",
                  "image":"arquillian:./src/test/resources/wildfly",
                  "ports":[  
                     {  
                        "hostPort":8080,
                        "containerPort":8080,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      },
      {  
         "apiVersion":"v1",
         "kind":"Pod",
         "metadata":{  
            "name":"mysql",
            "labels":{  
               "name":"mysql"
            }
         },
         "spec":{  
            "containers":[  
               {  
                  "name":"mysql",
                  "image":"mysql:latest",
                  "ports":[  
                     {  
                        "hostPort":3306,
                        "containerPort":3306,
                        "protocol":"TCP"
                     }
                  ],
                  "env":[  
                     {  
                        "name":"MYSQL_ROOT_PASSWORD",
                        "value":"letmein"
                     },
                     {  
                        "name":"MYSQL_DATABASE",
                        "value":"ape"
                     },
                     {  
                        "name":"MYSQL_USER",
                        "value":"ape"
                     },
                     {  
                        "name":"MYSQL_PASSWORD",
                        "value":"letmein"
                     }
                  ]
               }
            ]
         }
      },
      {  
         "kind":"Service",
         "apiVersion":"v1",
         "metadata":{  
            "name":"mysql-service"
         },
         "spec":{  
            "selector":{  
               "name":"mysql"
            },
            "ports":[  
               {  
                  "protocol":"TCP",
                  "port":3306,
                  "targetPort":3306
               }
            ]
         }
      }
   ]
}